<h1>All Listed Posts</h1>
<table>
  <thead>
    <tr>
      <th>Post_ID</th>
      <th>Title</th>
      <th>Body</th>
      <th>Image</th>
      <th colspan="4"></th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post|%>
      <tr>
        <td><%= post.id %></td>
        <td><%= post.title %></td>
        <td><%= post.body %></td>
        <td><%= image_tag post.image.url(:thumb) %></td>
        <td><%= link_to 'Show',post_path(post) %> |
        <%= link_to 'Destroy', delete_post_path(post),
              data: { confirm: 'Are you sure?' } %></td>
        
</tr>

    <%#= render :partial => 'post' %>
    <% end %>
<%#*<tr><%= render @post%>
  </tbody>
</table>
<%#= render @posts %>
