
<h1>Enter the details of New Employee </h1>
<%= form_for :employee,:url=>{'action'=>'create'},:html =>{:id =>"form"} do |f| %>

<p>
  <%= f.label :First_Name %><br>
  <%= f.text_field:fname,:id =>"FN" %>
</p>

<p>
  <%= f.label :Last_Name %><br>
  <%= f.text_field:lname,:id =>"LN" %>
</p>

<p>
  <%= f.label :DOB %><br>
  <%= f.date_select(:dob, :start_year => 60.years.ago.year, :end_year => Date.today.year, :default => Date.today,:include_blank => "- Choose DOB -") %>
</p>
<p>
    <%= f.label :Joining_Date %><br />
    <%= f.date_select(:hdate, :order => [:month, :day, :year],:prompt => "- Select -") %>
    
</p> 
<p>
  <%= f.label :Email_id %><br>
  <%= f.text_field:email,:id =>"email" %>
</p>
